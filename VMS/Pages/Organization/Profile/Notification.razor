<div class="my-notification @(isNotification ? "d-block" : "d-none") ">
    <div class="notification__content mx-auto w-50 ">
        <div class="notification__img  mx-auto my-5"> <img class="w-75" src="img/LogoBaner/KHOA-VIỆN-KTX/LOGO KHOA QUẢN TRỊ.png" alt=""></div>
        <div class="notification__btn text-center py-3">
            <button @onclick="CloseNotification"  class="btn pr-5 btn__cancel px-4">Hủy</button>
            <button @onclick="CloseNotification"  class="btn btn__save px-4 ms-5">Lưu</button>
        </div>
    </div>
</div>

@code {

    bool isNotification = true;
    void CloseNotification()
    {

        isNotification = !isNotification;
    }
}
