@attribute [Route(Routes.ActivitySearch)]

<div class="container-lg px-0 layout">
    <div class="layout__filterbar mb-2">
        <div class="heading-container">
            <h3 class="mt-5 mb-4 text-uppercase page-heading">We do it <span>together!</span></h3>
            <SearchBox SearchValueChanged="SearchValueChanged"/>
        </div>
        <SearchBoxAndFilterBar Filter="filter"
                               FilterChanged="FilterChanged"
                               @bind-OrderList="orderList" />
    </div>
    <div class="layout__divider"></div>
    <div class="layout__body">
        <PageAct Filter=@filter
                 SearchValue=@searchValue
                 OrderList=@orderList
                 IsSearch=@isSearch />
    </div>
</div>

