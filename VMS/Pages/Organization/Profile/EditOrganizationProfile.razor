@attribute [Route(Routes.EditProfile)]

<div class="my-editProfile">
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto">
                <h1 class="editProfile__title my-3">Chỉnh sửa <span>thông tin tổ chức</span></h1>
                <div class="editProfile__logo text-center my-5">
                    @if (!string.IsNullOrEmpty(org.Avatar))
                    {
                        <img src="@org.Avatar" alt="">
                    }
                </div>
                <EditForm Model="org" OnValidSubmit="HandleSubmit" OnInvalidSubmit="HandleInvalidSubmit" class="editProfile__form">
                    <DataAnnotationsValidator />

                    <div class="row form-item">
                        <p class="col-4 form-text">Tên tổ chức</p>
                        <div class="col-8 px-0">
                            <InputText @bind-Value="@org.UserName" class="form-input form-control" />
                            <ValidationMessage For="() => org.UserName" />
                        </div>

                    </div>
                    <div class="row form-item">
                        <p class="col-4 form-text">Gmail</p>
                        <div class="col-8 px-0">
                            <InputText @bind-Value="@org.Email" class="form-input form-control" />
                            <ValidationMessage For="() => org.Email" />
                        </div>

                    </div>
                    <div class="row form-item">
                        <p class="col-4 form-text">Điện thoại</p>
                        <div class="col-8 px-0">
                            <InputText @bind-Value="@org.PhoneNumber2" class="form-input form-control" />
                            <ValidationMessage For="() => org.PhoneNumber2" />
                        </div>

                    </div>
                    <div class="row form-item">
                        <p class="col-4 form-text">Lĩnh vực</p>
                        <div class="col-8 form-field ">
                            <div class="d-flex">
                                <div class=" owl-carousel owl-theme editProfile__carousel">
                                    @foreach (var item in choosenAreas)
                                    {
                                        <div class="form-field-item item">
                                            <i class="material-icons">@item.Icon</i>
                                            <span>@item.Name</span>
                                        </div>
                                    }
                                    <ValidationMessage For="() => org.Areas" />
                                </div>

                                <div class="form-field-item ms-auto item-add">
                                    <i class="material-icons-outlined icon-add" @onclick="ShowAreasModal">add</i>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row form-item">
                        <p class="col-4 form-text">Tầm nhìn & sứ mệnh</p>
                        <div class="col-8 position-relative px-0">
                            <div class="col-8 px-0 w-100">
                                <InputTextareaOnInput MaxLength="@maxWord" @bind-Value="org.Mission" class="form-input mx-0 form-control" />
                                <p class="countWord text-end mb-0">@CountWord()/@maxWord</p>
                                <ValidationMessage For="() => org.Mission" />
                            </div>

                        </div>
                    </div>
                    <div class="row form-item mb-0">
                        <p class="col-4 form-text">Thay đổi ảnh</p>
                        <div class="col-8 px-0 ">
                            <UploadImg InputFileChanged="HandleFileChanged"
                                       ImageDiscarded="HandleImageDiscarded"
                                       PreviewImgSrc="@org.Avatar"
                                       ShowPreview="@isPreview" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8 ms-auto from__btn">
                            <a href="@Routes.HomePage" class="btn from__btn-cancel">Hủy</a>
                            <button type="submit" class="btn from__btn-submit ms-5 ">Hoàn tất</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<Spinner IsLoading="isLoading" />

