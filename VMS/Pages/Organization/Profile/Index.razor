@attribute [Route(Routes.Organizations + "/{OrgId}")]

@using VMS.Application.ViewModels
@using VMS.Application.Interfaces

<Information OrgId="@OrgId"></Information>
<Act Title="đang diễn ra" HaveControl="true" HaveDecor="true" Datas="act"/>
<Act Title="được yêu thích" HaveDecor="false"  Datas="actfavor"/>
<ActTookPlace></ActTookPlace>


@code {
    private List<OrgActViewModel> act =new();
    private List<OrgActViewModel> actfavor = new();
    private List<OrgActViewModel> actcompleted;
    [Parameter]
    public string OrgId { get; set; }
    [Inject]
    private IOrganizationService OrganizationService { get; set; }
    protected async override Task OnInitializedAsync()
    {
        act = await OrganizationService.GetOrgActs(OrgId);
        actfavor = await OrganizationService.GetOrgActFavourite(OrgId);
        actcompleted = await OrganizationService.GetOrgActCompleted(OrgId);
    }
}
