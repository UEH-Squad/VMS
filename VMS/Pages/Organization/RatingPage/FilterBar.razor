<div class="select-form d-flex align-items-start">
    <div class="select-form-box-1 select-form-box-1-inline d-flex align-items-center">
        <input type="radio" class="checkbox-1" id="rated" name="option" @onclick="async () => await RadioButtonChangedAsync(true)" />
        <label class="label-1" for="rated">Đã đánh giá</label>
    </div>
    <div class="select-form-box-2 select-form-box-2-inline d-flex align-items-center">
        <input type="radio" class="checkbox-2" id="none-rated" name="option" @onclick="async () => await RadioButtonChangedAsync(false)" />
        <label class="label-2" for="none-rated">Chưa đánh giá</label>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<bool?> IsRatedChanged { get; set; }

    private async Task RadioButtonChangedAsync(bool value)
    {
        await IsRatedChanged.InvokeAsync(value);
    }
}
