<div class="my-appellation">
    <div class="appellation__content mx-auto text-center py-4">
        <div>
            <i @onclick="() => CloseAppellation()" class="material-icons-outlined icon-exitModal">
                close
            </i>
        </div>
        <h3>Danh hiệu</h3>
        @foreach (var item in appellations)
        {
            <p @onclick="() => CloseAppellation(item)">@item</p>
        }
    </div>

</div>

@code {
    private List<string> appellations = new();

    [CascadingParameter]
    private BlazoredModalInstance Modal { get; set; }

    protected override void OnInitialized()
    {
        appellations.Add("Chiến sĩ xuất sắc");
        appellations.Add("Chiến sĩ năng động");
        appellations.Add("Chiến sĩ vì tình chị em");
        appellations.Add("Chiến sĩ mùa hè xanh");
    }

    private async Task CloseAppellation(string appellation = "")
    {
        await Modal.CloseAsync(ModalResult.Ok<string>(appellation));
    }
}
