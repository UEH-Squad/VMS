@inject IModalService Modal
<div class="modal-backdrop modal-dialog-centered justify-content-center">
    <div class="my-custom-popup position-relative">
        <span @onclick="CloseModal" class="material-icons-outlined close-btn">
            close
        </span>
        <h3 class="text-center mt-5 mb-4">Kỹ năng</h3>
        <div class="col-10 mx-auto">
            <div class="row justify-content-evenly ms-5">
                <div class="col-3">
                    <div @onclick="ShowSubSkills" class="area-item-wrapper d-flex align-items-center mb-4 position-relative">
                        <p class="m-0">Kỹ năng mềm</p>
                        
                            <div @onclick:stopPropagation class="my-custom-sub-popup position-absolute @(IsShowAreas ? "d-block" : "")">
                                <p class="sub-popup-item mb-3">Làm việc nhóm</p>
                                <p class="sub-popup-item mb-3">Tư duy Logic</p>
                                <p class="sub-popup-item mb-3">Xây dựng kế hoạch</p>
                                <p class="sub-popup-item mb-3">Giao tiếp & Ứng xử</p>
                                <p class="sub-popup-item mb-3">Giải quyết vấn đề</p>
                                <p class="sub-popup-item mb-3">Quản lý thời gian</p>
                                <p class="sub-popup-item mb-3">Đồng cảm & Sẻ chia</p>
                                <p class="sub-popup-item mb-3">Quan sát & Lắng nghe</p>
                                <p class="sub-popup-item mb-3">Tìm kiếm & Xử lý thông tin</p>
                                <p class="sub-popup-item mb-3">Kiểm soát cảm xúc</p>
                            </div>

                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Lập trình</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Thể lực tốt</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Trách nhiệm</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Xây dựng website</p>
                    </div>
                </div>

                <div class="col-5">
                    <div @onclick="ShowExpertise" class="area-item-wrapper d-flex align-items-center mb-4 position-relative">
                        <p class="m-0">Kiến thức chuyên ngành</p>
                        <div @onclick:stopPropagation class="my-custom-sub-popup position-absolute @(IsShowExpertise ? "d-block" : "")">
                            <p class="sub-popup-item mb-4">Luật</p>
                            <p class="sub-popup-item mb-4">Kế toán/Kiểm toán</p>
                            <p class="sub-popup-item mb-4">Marketing</p>
                            <p class="sub-popup-item mb-4">Quản trị</p>
                            <p class="sub-popup-item mb-4">Tài chính</p>
                            <p class="sub-popup-item mb-4">Ngân hàng</p>
                            <p class="sub-popup-item mb-4">Ngoại ngữ</p>
                            <p class="sub-popup-item mb-4">Lý luận chính trị</p>
                        </div>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Có phương tiện di chuyển</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Hoạch định tài chính</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Chỉnh sửa/Thiết kế hình ảnh/video</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Viết Proposal/kịch bản/content</p>
                    </div>
                </div>

                <div class="col-3">
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Siêng năng</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Kiên nhẫn</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Nhiệt tình</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Checklist</p>
                    </div>
                    <div class="area-item-wrapper d-flex align-items-center mb-4">
                        <p class="m-0">Lái xe</p>
                    </div>
                </div>
            </div>
        </div>
        <div @onclick="SaveModal" class="save-btn d-flex justify-content-center align-items-center">Lưu</div>
    </div>
</div>
@code {
    [CascadingParameter]
    private BlazoredModalInstance SkillsModal { get; set; }
    void CloseModal()
    {
        SkillsModal.CloseAsync(ModalResult.Ok(""));
    }

    void SaveModal()
    {
        SkillsModal.CloseAsync(ModalResult.Ok("bg-grey"));
    }

    private bool IsShowAreas = false;
    void ShowSubSkills()
    {
        if (!IsShowAreas)
        {
            IsShowAreas = !IsShowAreas;
        }
        else
        {
            IsShowAreas = !IsShowAreas;
        }
    }

    private bool IsShowExpertise = false;
    void ShowExpertise()
    {
        if (!IsShowExpertise)
        {
            IsShowExpertise = !IsShowExpertise;
        }
        else
        {
            IsShowExpertise = !IsShowExpertise;
        }
    }


}
