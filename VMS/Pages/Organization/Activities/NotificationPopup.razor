<div class="modal-backdrop modal-dialog-centered justify-content-center">
    <div class="my-custom-popup position-relative d-flex flex-column justify-content-between align-items-center">
        <span @onclick="CloseModal" class="material-icons-outlined close-btn">
            close
        </span>
        <h3>Bạn đã <span>@(IsEdit ? "sửa" : "tạo") hoạt động</span> thành công!</h3>
        <div class="row mt-3 my-btn">
            <button class="col-6 btn my-btn__cancel" @onclick="CloseModal">Đóng</button>
            <a href="@CTALink" class="col-6 btn my-btn__view-activity">Xem hoạt động</a>
        </div>
    </div>
</div>

@code
{
    [CascadingParameter]
    public BlazoredModalInstance Modal { get; set; }

    [Parameter]
    public bool IsEdit { get; set; }

    [Parameter]
    public string CTALink { get; set; }

    private async Task CloseModal()
    {
        await Modal.CloseAsync();
    }
}