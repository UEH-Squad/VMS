<div class="my-notification">
    <div class="notification__content mx-auto">
        <div class="notification__img  py-4 text-center"> <img src="@Avatar" alt=""></div>
        <div class="notification__btn text-center py-4">
            <button @onclick="(async () => await CloseNotificationAsync())" class="btn pr-5 btn__cancel px-4">Hủy</button>
            <button @onclick="(async () => await CloseNotificationAsync(true))" class="btn btn__save px-4 ms-5">Lưu</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Avatar { get; set; }

    [CascadingParameter]
    public BlazoredModalInstance Modal { get; set; }

    private async Task CloseNotificationAsync(bool isSave = false)
    {
        await Modal.CloseAsync(ModalResult.Ok(isSave));
    }
}

