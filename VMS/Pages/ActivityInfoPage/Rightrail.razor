@using VMS.Application.Interfaces

@inject IIdentityService IdentityService

@if (Activity is { } activity)
{
    <div class="container">
        <div class="inside-the-border">
            <div class="icons">

                <div class="icon position-relative">
                    <span class="material-icons my-icons">
                        people_outline
                    </span>
                    <span class="icon-tooltip">
                        Cộng đồng
                    </span>
                </div>

                <div class="icon">
                    <span class="material-icons my-icons">
                        add_box
                    </span>
                </div>
            </div>
            <div class="about-infor">
                <div class="participant">
                    <p class="participant__title titles mb-0">Đối tượng tham gia</p>
                    <p class="participant__content contents mb-0">Sinh viên năm 1,2,3</p>
                </div>
                <div class="location">
                    <p class="location__title titles mb-0">Địa điểm tham gia</p>
                    <p class="location__content contents mb-0">Tp.Thủ Đức, Vĩnh Long, Tp.HCM</p>
                </div>
                <div class="time">
                    <p class="time__title titles mb-0">Thời gian tham gia</p>
                    <p class="time__content contents mb-0">08/08/2021 - 09/09/2021</p>
                </div>
                <div class="skill">
                    <p class="skill__title titles mb-0">Kỹ năng</p>
                    <p class="skill__content contents mb-0">Kỹ năng 1, kỹ năng 2, kỹ năng 3</p>
                </div>
                <div class="request">
                    <p class="request__title titles mb-0">Yêu cầu khi tham gia</p>
                    <ul>
                        <li class="request__content contents">Yêu cầu 1</li>
                        <li class="request__content contents">Yêu cầu 2</li>
                        <li class="request__content contents">Yêu cầu 3</li>
                    </ul>
                </div>
            </div>
            <div class="btn-sign-up--cover">
                <button @onclick="@(() => ShowSignUpPopUp())" disabled="@(!(IdentityService.GetCurrentUserId() is not null))" class="btn-sign-up">
                    <h3 class="btn-sign-up__text">Đăng ký</h3>
                </button>
            </div>
        </div>
        <button @onclick="@(() => ShowReportPopUp())" disabled="@(!(IdentityService.GetCurrentUserId() is not null))" class="report">Báo cáo hoạt động này</button>
    </div>
}
