@inject IJSRuntime JSRuntinme;

<div class="my-information pb-5">
    <div class="container">
        <div class="row ">
            <div class="col-4 text-center information__logo">
                <div class="information__logo-img mx-auto">
                    <img  src="@org?.Avatar" alt="">
                    <label for="myfile" class="d-inline"><span class="material-icons icon-camera">photo_camera</span></label>
                    <InputFile OnChange="ShowModal" type="file" id="myfile" name="myfile" class="d-none"></InputFile>
                </div>
                <p class="mb-2">@org?.FullName</p>
                <span>Tham gia từ năm @org?.CreatedDate.Year</span>
                <a class="information__logo-button">
                    <i class="material-icons-outlined">add</i>
                    <span>Tạo hoạt động mới</span>
                </a>
            </div>
            <div class="col-7 ms-auto my-auto">
                <div class=" pb-4 row-1">
                    <div class="col-left information__rank d-flex justify-content-evenly align-self-center">
                        <a href="@Routes.EditProfile" class="d-flex align-self-center">#2</a>
                        <div class="org-card__info__rate">
                            <span class="material-icons-outlined" style="color:@(org.AverageRating >= 0 ? "#EDF131" : "#B4B4B4")">
                                star@(HaftStar(org.AverageRating,0)?"_half":"")
                            </span>
                            <span class="material-icons-outlined" style="color:@(org.AverageRating >= 1 ? "#EDF131" : "#B4B4B4")">
                                star@(HaftStar(org.AverageRating,1)?"_half":"")
                            </span>
                            <span class="material-icons-outlined" style="color:@(org.AverageRating >= 2 ? "#EDF131" : "#B4B4B4")">
                                star@(HaftStar(org.AverageRating, 2)?"_half":"")
                            </span>
                            <span class="material-icons-outlined" style="color:@(org.AverageRating >= 3 ? "#EDF131" : "#B4B4B4")">
                                star@(HaftStar(org.AverageRating, 3)?"_half":"")
                            </span>
                            <span class="material-icons-outlined" style="color:@(org.AverageRating >= 4 ? "#EDF131" : "#B4B4B4")">
                                star@(HaftStar(org.AverageRating, 4)?"_half":"")
                            </span>
                            <br />
                            <span>@org.QuantityRating xếp hạng</span>
                        </div>
                        
                    </div>
                    <div class="col-right information__contact">
                        <p class="d-flex align-self-center">
                            <i class="material-icons-outlined">
                                email
                            </i>
                            <a href="mailto:@org?.Email">@org?.Email</a>
                        </p>
                        <p class="d-flex align-self-center">
                            <i class="material-icons-outlined">
                                settings_phone
                            </i>
                            <a href="tel:@org?.PhoneNumber">@org?.PhoneNumber</a>
                        </p>
                    </div>

                </div>
                <div class="row-2 pt-4">
                    <div class="col-left information__fields">
                        <h3>Lĩnh vực <span>chuyên môn</span></h3>
                        <div class="owl-carousel owl-theme information__carousel">
                            @if (org != null)
                            {
                                @foreach (var area in org.UserAreas)
                                {
                                    <div class="item">
                                        <i class="material-icons">@area.Area.Icon</i>
                                        <span>@area.Area.Name</span>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                    <div class="col-right information__act px-0">
                        <h3>Số hoạt động <span>đã tạo</span></h3>
                        <div class="d-flex justify-content-evenly align-self-center">
                            <span class="information__act-number">@org?.Activities.Count</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntinme.InvokeVoidAsync("vms.InformationCarousel");
    }

    [CascadingParameter]
    public IModalService Modal { get; set; }

    async Task ShowModal()
    {
        var options = new ModalOptions()
        {
            HideCloseButton = true,
            DisableBackgroundCancel = true,
            UseCustomLayout = true,
        };
        Modal.Show<Notification>("", options);
    }

    bool isNotification = false;
    void ShowNotification(){

        isNotification = !isNotification;
    }
    private bool HaftStar(double rate, int star)
    {
        if (rate - star >= 0 && rate - star < 0.5)
        {
            return true;
        }
        return false;
    }
}