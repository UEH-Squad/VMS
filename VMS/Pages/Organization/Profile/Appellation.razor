<div class="my-appellation">
    <div class="appellation__content mx-auto text-center py-4">
        <div>
            <i @onclick="CloseAppellation" class="material-icons-outlined icon-exitModal">
                close
            </i>
        </div>
        <h3>Danh hiệu</h3>
        <p>Tổ chức hoàn hảo</p>
        <p>Tổ chức chuyên nghiệp</p>
        <p>Hoạt động nổi bật năm học</p>
        <p>Hoạt động nổi bật trong tháng</p>


    </div>

</div>

@code {
    [CascadingParameter]
    private BlazoredModalInstance Modal { get; set; }


    private async Task CloseAppellation()
    {

        await Modal.CloseAsync();
    }
}

