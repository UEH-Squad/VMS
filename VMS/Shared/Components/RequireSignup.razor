<div class="modal-backdrop modal-dialog-centered justify-content-center">
    <div class="my-custom-popup position-relative d-flex flex-column justify-content-between align-items-center">
        <span @onclick="CloseModalAsync" class="material-icons-outlined close-btn">
            close
        </span>
        <div class="content text-center">
            <span>Vui lòng đăng nhập<br></span>
            <span>để thực hiện hành động này</span>

            <a href="@Routes.LogIn" class="btn mt-lg-3 mt-2">Đăng nhập</a>
        </div>
    </div>
</div>

    @code {

        [CascadingParameter]
        private BlazoredModalInstance RequireSignupModal { get; set; }

        private async Task CloseModalAsync()
        {
            await RequireSignupModal.CloseAsync();
        }
    }
