<div class="title">
    <h3 class="text-center">Tìm kiếm <span>Tình nguyện viên</span></h3>
</div>
@* search box component *@
<div class="col-lg-8">
    <VMS.Pages.ActivitySearchPage.SearchBox />
</div>

<p class="filter-name mt-5">Lọc <span>tình nguyện viên</span></p>

<div class="filter-bar d-flex my-4">
    <div class="filter-bar_left d-flex me-3">
        <div class="filter-bar_row-1">
            <div class="filter-item position-relative">
                <input @onclick="ShowLevelList1" @onfocusout="CloseLevelList" class="popup-btn_1" placeholder="@level1" readonly />
                <div class="my-dropdown" style="display: @display1">
                    <ul>
                        <li @onclick="ChooseLevelValue1">Khóa 44</li>
                        <li @onclick="ChooseLevelValue2">Khóa 45</li>
                        <li @onclick="ChooseLevelValue3">Khóa 46</li>
                        <li @onclick="ChooseLevelValue4">Khóa 47</li>
                    </ul>
                </div>
                <span class="material-icons-outlined position-absolute filter-item__icon">
                    expand_more
                </span>
            </div>

            <div class="filter-item position-relative">
                <div @onclick="ShowLevelList2" class="popup-btn_2">Lĩnh vực</div>
                <span class="material-icons-outlined position-absolute filter-item__icon">
                    expand_more
                </span>
                <div style="display: @display2">
                    @*<VMS.Pages.ActivitySearchPage.AreasPopup />*@
                </div>
            </div>
        </div>

        <div class="filter-bar_row-2">
            <div class="filter-item position-relative">
                <div @onclick="ShowLevelList3" class="popup-btn_2">Kỹ năng</div>
                <span class="material-icons-outlined position-absolute filter-item__icon">
                    expand_more
                </span>
                <div style="display: @display3">
                    @*<VMS.Pages.ActivitySearchPage.SkillsPopup />*@
                </div>
            </div>

            <div class="filter-item position-relative">
                <input @onclick="ShowLevelList4" @onfocusout="CloseLevelList" class="popup-btn_1" placeholder="@level2" readonly />
                <div class="my-dropdown" style="display: @display4">
                    <ul>
                        <li @onclick="ChooseLevelValue5">Công nghệ thông tin kinh doanh</li>
                        <li @onclick="ChooseLevelValue5">Công nghệ thông tin kinh doanh</li>
                        <li @onclick="ChooseLevelValue5">Công nghệ thông tin kinh doanh</li>
                        <li @onclick="ChooseLevelValue5">Công nghệ thông tin kinh doanh</li>
                    </ul>
                </div>
                <span class="material-icons-outlined position-absolute filter-item__icon">
                    expand_more
                </span>
            </div>
        </div>

    </div>
    <div class="filter-bar_right d-flex">
        <button class="filter-btn me-3">Lọc</button>
        <button class="clear-filter-btn">Xóa lọc</button>
    </div>
</div>
@code {
    string display1 = "none";
    string display2 = "none";
    string display3 = "none";
    string display4 = "none";
    string level1 = "Khóa";
    string level2 = "Khoa";

    void ShowLevelList1()
    {
        display1 = "block";
    }

    void ShowLevelList2()
    {
        display2 = "block";
    }
    void ShowLevelList3()
    {
        display3 = "block";
    }
    void ShowLevelList4()
    {
        display4 = "block";
    }

    void CloseLevelList()
    {
        display1 = "none";
        display2 = "none";
        display3 = "none";
        display4 = "none";
    }

    void ChooseLevelValue1()
    {
        level1 = "Ban chuyên môn";
    }

    void ChooseLevelValue2()
    {
        level1 = "Khoa/Viện/KTX";
    }

    void ChooseLevelValue3()
    {
        level1 = "CLB/Đội/Nhóm";
    }

    void ChooseLevelValue4()
    {
        level1 = "Khác";
    }

    void ChooseLevelValue5()
    {
        level2 = "Công nghệ thông tin kinh doanh";
    }
}
