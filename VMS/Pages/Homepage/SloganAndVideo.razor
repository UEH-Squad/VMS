@inject IJSRuntime JsRuntime

<div class="video-header">
    <div class="video-header__note">
        <div class="video-header__note__text">
            GoVirlunteer: Cộng đồng Tình nguyện trực tuyến Trường Đại học Kinh tế TP. HCM
        </div>
    </div>
    <video src=@videoUrl class="video-header__source" loop muted autoplay></video>
    <div class="video-header__title">
        <div class="video-header__title--main">
            Get Ready UEH
        </div>
        <div class="video-header__title--sub">
            Go Virlunteer
        </div>
    </div>
</div>

@code {
    //Change your video url here
    string videoUrl = "https://player.vimeo.com/external/359344963.sd.mp4?s=95e2d6120bf8034a2f0d9c797f9b6a059e1deaf1&profile_id=165";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JsRuntime.InvokeVoidAsync("vms.PlayVideo", videoUrl);
    }
}