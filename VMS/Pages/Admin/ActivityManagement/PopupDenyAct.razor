<div class="pop-up">
    <div class="center-screen">
        <div class="pop-up-container border-10 @(!isApproveSuccess ? "d-block" : "d-none")">
            <div @onclick="CloseModalAsync" class="close-btn">
                <span class="material-icons">
                    close
                </span>
            </div>
            <div class="content">
                <h3>Bạn có chắc chắn muốn</h3>
                <h3 class="mb-3"><span>Từ chối hoạt động </span>này</h3>
            </div>
            <div class="pop-up-btn">
                <div @onclick="CloseModalAsync" class="btn deny px-0">Hủy</div>
                <div @onclick="ApproveSuccessAsync" class="btn accept px-0">Xác nhận</div>
            </div>
        </div>

        <div class="pop-up-container border-10 @(!isApproveSuccess ? "d-none" : "d-block")">
            <div @onclick="CloseModalAsync" class="close-btn-s">
                <span class="material-icons">
                    close
                </span>
            </div>
            <div class="pop-up-content">
                <h3>Bạn đã <span>từ chối hoạt động</span></h3>
                <h3>thành công</h3>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isApproveSuccess;

    [CascadingParameter]
    public BlazoredModalInstance Modal { get; set; }

    private async Task CloseModalAsync()
    {
        await Modal.CloseAsync();
    }

    private async Task ApproveSuccessAsync()
    {
        isApproveSuccess = true;
        await Modal.CloseAsync(ModalResult.Ok((bool)isApproveSuccess));
    }
}
