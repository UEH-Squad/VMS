@using VMS.Application.ViewModels
@using VMS.GenericRepository
<div class="card">
    @if (IsUserRating == true || IsUserRating == IsOrgRating)
    {
        <div class="card-member">
            <div class="card-member_name">
                <a href="@Routes.UserProfile/@Item.User.Id" class="avatar">
                    <img src="@Item.User.Avatar" alt="avatar">
                </a>
                <div class="name">
                    <a href="@Routes.UserProfile/@Item.User.Id" class="name-member">@Item.User.FullName</a>
                    <div class="name_stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Item.Rating)
                            {
                                <span style="color: @Color1;" class="material-icons">star_rate</span>
                            }
                            else
                            {
                                <span style="color: @Color2;" class="material-icons">star_rate</span>
                            }
                        }
                    </div>
            </div>
        </div>
        <div class="card-member_comment mt-2 mb-3">
            <p class="comment-show">
                @Item.CommentByUser
            </p>
        </div>
    </div>
    }
    @if (IsOrgRating == true || IsUserRating == IsOrgRating)
    {


        <div class="card-organization">
            <div class="card-organization_name">
            <a href="@Routes.OrgProfile/@Item.Organizer.Id" class="avatar">
                <img src="@Item.Organizer.Avatar" alt="avatar">
            </a>
            <div class="name">
                <a href="@Routes.OrgProfile/@Item.Organizer.Id" class="name-organization">@Item.Organizer.FullName</a>
                <div class="name_stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Item.RatingByOrg)
                            {
                                <span style="color: @Color1;" class="material-icons">star_rate</span>
                            }
                            else
                            {
                                <span style="color: @Color2;" class="material-icons">star_rate</span>
                            }
                        }
                    </div>
            </div>
        </div>
        <div class="card-organization_comment mt-2 mb-3">
            <p class="comment-show">
                @Item.CommentByOrg
            </p>
        </div>
    </div>
    }
</div>

@code {
    string Color1 = "#EDF131";
    string Color2 = "#C4C4C4";

    [Parameter]
    public RecruitmentViewModel Item{ get; set; }
    [Parameter]
    public bool IsOrgRating{ get; set; }
    [Parameter]
    public bool IsUserRating{ get; set; }

}
